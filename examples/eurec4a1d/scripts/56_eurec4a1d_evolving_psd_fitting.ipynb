        #     nsupers = nsupers,
        #     RHO_SOL= inputs["RHO_SOL"],
        #     NUMCONC= numconc,
        #     gridboxbounds= gridboxbounds)

        errors.append(0)

        psd = xr.DataArray(
            multiplicities / gridboxvolume,
            coords=[("radius", pseudo_radii)])
        psd = psd.expand_dims(cloud_id = [cloud_id])
